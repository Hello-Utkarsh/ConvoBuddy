generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Pitch {
  id Int @id @default(autoincrement())
  title String
  description String
  startDate DateTime
  registered Int @default(0)
  user User[]
}

model User {
  id Int @id @default(autoincrement())
  registered Boolean
  created Boolean
  pitchId Int
  pitch Pitch @relation(fields: [pitchId], references: [id])
}
